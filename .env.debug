# Debug Environment Configuration
# Copy this to .env.local for local debugging

# Application Settings
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=debug

# Server Configuration
HOST=127.0.0.1
PORT=8000
UVICORN_RELOAD=true
WORKERS=1

# Debug Settings
DEBUG_PORT=5678
WAIT_FOR_DEBUGGER=false

# Database (use your actual MongoDB connection string)
# MONGODB_URL=mongodb://localhost:27017/orienteeringx

# CORS Settings (for development)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:8000"]

# Job Scheduler Settings
SCHEDULER_TIMEZONE=UTC
SCHEDULER_JOB_DEFAULTS_COALESCE=true
SCHEDULER_JOB_DEFAULTS_MAX_INSTANCES=1

# API Settings
PROJECT_NAME="OrienteeringX API (Debug)"
PROJECT_VERSION="1.0.0-debug"
API_V1_STR="/api/v1"